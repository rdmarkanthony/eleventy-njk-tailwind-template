{
  "name": "eleventy-njk-tailwind-template",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p 'dev:*'",

    "dev:eleventy": "eleventy --serve",
    "dev:css": "tailwindcss -i ./src/assets/css/style.scss -o ./public/assets/css/style.css --watch",
    "dev:js": "node esbuild.config.js --watch",
    
    "build": "npm-run-all -s 'build:*'",
    "build:css": "tailwindcss -i ./src/assets/css/style.scss -o ./public/assets/css/style.css --minify",
    "build:eleventy": "eleventy",
    "build:js": "node esbuild.config.js",
    
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2"
  },
  "devDependencies": {
    "tailwindcss": "^4.2.0",
    "@tailwindcss/cli": "^4.2.0",
    "@tailwindcss/postcss": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "dotenv": "^17.3.1",
    "esbuild": "^0.27.3",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0"
  }
}
